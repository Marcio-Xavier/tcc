@model web.ViewModel.Cliente.clienteListarViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-12">
            <br />
            <div class="card">
                <div class="card-header">
                    <b>Clientes</b>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("pesquisar", "cliente"))
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-6">
                                        <label>Nome</label>
                                        @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control form-control-sm col-12" } })
                                    </div>
                                    <div class="col-3">
                                        <label>Celular</label>
                                        @Html.EditorFor(model => model.celular, new { htmlAttributes = new { @class = "form-control form-control-sm col-12 celular" } })
                                    </div>
                                    <div class="col-2">
                                        <label>Status</label><br />
                                        @Html.CheckBoxFor(model => model.ativo, htmlAttributes: new { @id = "SwitchStatus", @onclick = "SetStatusLabel()" })
                                        <label id="lblStatus"></label>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-1">
                                        <button type="submit" class="btn btn-sm btn-success">Pesquisar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <br />

                    <div class="row">
                        <div class="col-12">
                            <table class="table table-sm table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>
                                            <i class="fa fa-user-o"></i>
                                            <label>Nome</label>
                                        </th>
                                        <th>
                                            <i class="fa fa-phone"></i>
                                            <label>Celular</label>
                                        </th>
                                        <th>
                                            <i class="fa fa-adjust"></i>
                                            <label>Status</label>
                                        </th>
                                        <th>
                                            <i class="fa fa-plus-circle"></i>
                                            <label>Mais</label>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.clientes)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.numeroCelular)
                                            </td>
                                            <td>
                                                @if (item.ativo)
                                                {
                                                    <span class="badge badge-success">Ativo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Inativo</span>
                                                }
                                            </td>
                                            <td class="fit-column">
                                                @Html.ActionLink("Detalhes", "detalhes", new { id = item.clienteID }, new { @class = "btn btn-sm btn-outline-primary" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
