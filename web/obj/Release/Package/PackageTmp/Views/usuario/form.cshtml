@model web.Models.Usuario.usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-12">
            <br />
            <div class="card">
                <div class="card-header">
                    <b>@Model.titulo</b>
                </div>
                @using (Html.BeginForm("salvar", "usuario", new { id = "form" }))
                {
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <label>Login</label>
                                @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control form-control-sm col-12" } })
                            </div>

                            <div class="col-md-3">
                                <label>Senha</label>
                                @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "form-control form-control-sm col-12" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <label>Estabelecimento</label>
                                @Html.EditorFor(model => model.estabelecimento.nomeFantasia, new { htmlAttributes = new { @class = "form-control form-control-sm col-12 disabled" } })
                            </div>
                            <div class="col-1">
                                <label>Status</label><br />
                                @Html.CheckBoxFor(model => model.ativo, htmlAttributes: new { @id = "SwitchStatus", @onclick = "SetStatusLabel()" })
                                <label id="lblStatus"></label>
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-sm btn-success">Salvar</button>
                        <hr />

                        @Html.ActionLink("Voltar", "listar", null, new { @class = "btn btn-sm btn-outline-warning" })

                        <div class="card-body"></div>
                    </div>
                    @Html.HiddenFor(model => model.usuarioID)
                    @Html.HiddenFor(model => model.estabelecimento.estabelecimentoID)
                }
            </div>
        </div>
    </div>
</div>

